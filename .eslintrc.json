{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@babel/eslint-parser"
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-useless-return": "error",
    "newline-before-return": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "no-const-assign": "error",
    "eol-last": "warn",
    "space-before-blocks": "warn",
    "semi": [2, "always"],
    "no-unused-vars": "off"
  }
}